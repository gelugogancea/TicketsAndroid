<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="#FFFFFF">

    <RadioGroup android:id="@+id/radiogroup_devtype"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioButton_tcp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="TCP(WI-FI)"
            android:layout_weight="0.33"
            android:textColor="#000000"
            android:checked="false" />

        <RadioButton
            android:id="@+id/radioButton_bluetooth"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Bluetooth"
            android:layout_weight="0.33"
            android:textColor="#000000"/>

        <RadioButton
            android:id="@+id/radioButton_usb"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="USB"
            android:layout_weight="0.33"
            android:textColor="#000000"/>

    </RadioGroup>

    <TextView
        android:id="@+id/textView_pritnerlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Printers"
        android:layout_marginTop="5dp"
        android:textColor="#000000"/>

    <ListView
        android:id="@+id/listView_printerlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#ffffff"
        android:footerDividersEnabled="false"
        android:focusableInTouchMode="false">
    </ListView>

</LinearLayout>